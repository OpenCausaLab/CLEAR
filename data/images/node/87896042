digraph {
	graph [rankdir=LR]
	K [height=.5 shape=plaintext width=.5]
	T [height=.5 shape=plaintext width=.5]
	L [height=.5 shape=plaintext width=.5]
	U [height=.5 shape=plaintext width=.5]
	T -> U [color=blue]
	K -> U [color=blue]
	K -> L [color=blue]
	T -> L [color=blue]
	T -> U [color=red dir=both]
}
