digraph {
	graph [rankdir=LR]
	D [height=.5 shape=plaintext width=.5]
	B [height=.5 shape=plaintext width=.5]
	V [height=.5 shape=plaintext width=.5]
	F [height=.5 shape=plaintext width=.5]
	B -> F [color=blue]
	B -> V [color=blue]
	D -> B [color=blue]
	D -> F [color=blue]
	D -> V [color=blue]
	B -> V [color=red dir=both]
	V -> F [color=red dir=both]
}
