digraph {
	graph [rankdir=LR]
	C [height=.5 shape=plaintext width=.5]
	H [height=.5 shape=plaintext width=.5]
	N [height=.5 shape=plaintext width=.5]
	T [height=.5 shape=plaintext width=.5]
	C -> H [color=blue]
	H -> N [color=blue]
	H -> N [color=red dir=both]
	N -> T [color=red dir=both]
	C -> N [color=red dir=both]
}
