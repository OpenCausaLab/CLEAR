digraph {
	graph [rankdir=LR]
	W [height=.5 shape=plaintext width=.5]
	N [height=.5 shape=plaintext width=.5]
	B [height=.5 shape=plaintext width=.5]
	H [height=.5 shape=plaintext width=.5]
	Z [height=.5 shape=plaintext width=.5]
	W -> B [color=blue]
	B -> Z [color=blue]
	N -> B [color=blue]
	W -> Z [color=red dir=both]
	N -> H [color=red dir=both]
	N -> B [color=red dir=both]
	W -> N [color=red dir=both]
}
