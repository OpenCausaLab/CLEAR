digraph {
	graph [rankdir=LR]
	Z [height=.5 shape=plaintext width=.5]
	P [height=.5 shape=plaintext width=.5]
	E [height=.5 shape=plaintext width=.5]
	L [height=.5 shape=plaintext width=.5]
	E -> L [color=blue]
	Z -> E [color=blue]
	P -> L [color=blue]
	Z -> L [color=blue]
	Z -> L [color=red dir=both]
	Z -> E [color=red dir=both]
	Z -> P [color=red dir=both]
}
