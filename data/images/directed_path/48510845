	graph [rankdir=LR]
	X [height=.5 shape=plaintext width=.5]
	W [height=.5 shape=plaintext width=.5]
	P [height=.5 shape=plaintext width=.5]
	N [height=.5 shape=plaintext width=.5]
	B [height=.5 shape=plaintext width=.5]
	T [height=.5 shape=plaintext width=.5]
	P -> N [color=blue]
	N -> T [color=blue]
	X -> P [color=blue]
	W -> T [color=blue]
	W -> P [color=blue]
	W -> N [color=blue]
	B -> T [color=blue]
	P -> B [color=blue]
}
