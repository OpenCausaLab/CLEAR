digraph {
	graph [rankdir=LR]
	V [height=.5 shape=plaintext width=.5]
	A [height=.5 shape=plaintext width=.5]
	N [height=.5 shape=plaintext width=.5]
	R [height=.5 shape=plaintext width=.5]
	A -> N [color=blue]
	V -> R [color=blue]
	V -> A [color=red dir=both]
	V -> N [color=red dir=both]
	V -> R [color=red dir=both]
}
