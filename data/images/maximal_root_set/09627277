digraph {
	graph [rankdir=LR]
	L [height=.5 shape=plaintext width=.5]
	B [height=.5 shape=plaintext width=.5]
	S [height=.5 shape=plaintext width=.5]
	U [height=.5 shape=plaintext width=.5]
	V [height=.5 shape=plaintext width=.5]
	X [height=.5 shape=plaintext width=.5]
	B -> U [color=blue]
	L -> X [color=blue]
	S -> V [color=blue]
	U -> V [color=red dir=both]
	B -> X [color=red dir=both]
	B -> S [color=red dir=both]
	L -> S [color=red dir=both]
	L -> V [color=red dir=both]
}
