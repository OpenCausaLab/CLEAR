digraph {
	graph [rankdir=LR]
	V [height=.5 shape=plaintext width=.5]
	A [height=.5 shape=plaintext width=.5]
	Z [height=.5 shape=plaintext width=.5]
	I [height=.5 shape=plaintext width=.5]
	H [height=.5 shape=plaintext width=.5]
	R [height=.5 shape=plaintext width=.5]
	V -> H [color=blue]
	A -> I [color=blue]
	H -> R [color=blue]
	I -> R [color=blue]
	Z -> H [color=blue]
	V -> R [color=blue]
	V -> A [color=blue]
}
