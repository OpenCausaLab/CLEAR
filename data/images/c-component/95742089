digraph {
	graph [rankdir=LR]
	T [height=.5 shape=plaintext width=.5]
	R [height=.5 shape=plaintext width=.5]
	V [height=.5 shape=plaintext width=.5]
	N [height=.5 shape=plaintext width=.5]
	X [height=.5 shape=plaintext width=.5]
	T -> V [color=blue]
	V -> X [color=blue]
	T -> N [color=blue]
	T -> X [color=blue]
	R -> X [color=blue]
	R -> N [color=blue]
	T -> R [color=red dir=both]
	V -> X [color=red dir=both]
}
